@model List<ExploreEntity.Models.Author>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Count == 0)
{
    <h2>No Authors Found!</h2>
}
else
{
    <h2>Here are the Authors</h2>
    <h3>@Model.Count</h3>

    <ul>
        @foreach (var author in Model)
        {
            <li>@author.PenName</li>
        }

    </ul>
}